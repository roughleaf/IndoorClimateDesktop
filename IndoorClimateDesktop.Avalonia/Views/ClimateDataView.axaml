<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="IndoorClimateDesktop.Avalonia.Views.ClimateDataView">
  <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*" ShowGridLines="True">
    <TextBox Grid.Column="0" Grid.Row="0" Text="{Binding ZeroText}"/>
    <TextBox Grid.Column="2" Grid.Row="0" Text="{Binding NodeData.macAddress}"/>
    <Button Grid.Column="1"
            Grid.Row="0"
            Content="Push Me"
            Command="{Binding ButtonPushed}"/>
  </Grid>
</UserControl>
